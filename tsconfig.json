{
  "compilerOptions": {
    "target": "ES2016",
    "module": "CommonJS",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@client/*": ["packages/client/src/*"],
      "@server/*": ["packages/server/src/*"],
      "@shared/*": ["packages/shared/src/*"]
    }
  },
  "exclude": ["node_modules", "**/dist"]
} 